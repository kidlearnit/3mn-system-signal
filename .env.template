# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Database Configuration
MYSQL_DB=trading
MYSQL_USER=trader
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here

# SMS Configuration (optional)
SMS_API_KEY=""
SMS_API_SECRET=""
SMS_FROM_NUMBER=""
SMS_TO_NUMBERS=""

# Email Configuration
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=Trading Signals Service
EMAIL_TLS=true
EMAIL_TO=recipient1@gmail.com,recipient2@gmail.com

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Telegram Configuration
TG_TOKEN=your_telegram_bot_token_here
TG_CHAT_ID=your_telegram_chat_id_here

# Data Sources
VNSTOCK_ENABLED=true
POLYGON_API_KEY=your_polygon_api_key_here
YF_ENABLED=true

# Application Settings
TIMEZONE=Asia/Ho_Chi_Minh

# MetaTrader 5 Configuration (optional)
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_mt5_server_here
MT5_ALLOWED_EXCHANGES=""
MT5_SYMBOL_PREFIX="XAUUSD"
MT5_DEFAULT_VOLUME=""
MT5_TP_PCT=""
MT5_SL_PCT=""
MT5_ENABLED=0

# Email Digest Configuration
EMAIL_DIGEST_SYMBOLS=NVDA,MSFT,AAPL,AMZN,AVGO,META,NFLX,TSLA,GOOGL,GOOG,COST,PLTR,CSCO,TMUS,AMD,LIN,INTU,PEP,SHOP,BKNG,ISRG,TXN,QCOM,AMGN,ADBE
EMAIL_DIGEST_LIMIT=25
EMAIL_DIGEST_TIMEFRAMES=1m,2m,5m,15m
EMAIL_DIGEST_INTERVAL_SECONDS=600
EMAIL_DIGEST_SUBJECT=SMA Digest 25

# Database Connection Configuration
MYSQL_HOST_EXTERNAL=localhost
MYSQL_PORT_EXTERNAL=3309
DATABASE_URL_EXTERNAL=mysql+pymysql://trader:your_password@localhost:3309/trading

MYSQL_HOST_INTERNAL=mysql
MYSQL_PORT_INTERNAL=3306
DATABASE_URL_INTERNAL=mysql+pymysql://trader:your_password@mysql:3306/trading

DB_CONNECTION_MODE=external
