# Market Signal Monitor Environment Configuration
# Copy this file to .env.market-monitor and update with your values

# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/trading_signals

# Telegram Bot Configuration
TG_TOKEN=your_telegram_bot_token_here
TG_CHAT_ID=your_telegram_chat_id_here

# Timezone Configuration
TZ=Asia/Ho_Chi_Minh
TIMEZONE=Asia/Ho_Chi_Minh

# Logging Configuration
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Market Monitor Configuration
MARKET_MONITOR_INTERVAL=5
MARKET_MONITOR_MARKETS=VN,US

# Database Configuration (if using local MySQL)
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=trading_signals
MYSQL_USER=trading_user
MYSQL_PASSWORD=trading_password

# Redis Configuration (if using Redis)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your_secret_key_here
