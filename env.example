# Database Configuration
MYSQL_DB=trading_db
MYSQL_ROOT_PASSWORD=your_secure_password_here
MYSQL_USER=trader
MYSQL_PASSWORD=traderpass
DATABASE_URL=mysql+pymysql://trader:traderpass@mysql:3306/trading_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Telegram Configuration (Optional - for notifications)
TG_TOKEN=your_telegram_bot_token_here
TG_CHAT_ID=your_telegram_chat_id_here

# MT5 Configuration (Optional - for automated trading)
MT5_ENABLED=0
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_mt5_server_here
MT5_PATH=C:\\Program Files\\MetaTrader 5\\terminal64.exe
MT5_ALLOWED_EXCHANGES=NASDAQ,NYSE
MT5_SYMBOL_PREFIX=
MT5_DEFAULT_VOLUME=0.1
MT5_TP_PCT=2.0
MT5_SL_PCT=1.0
MT5_DEVIATION=20
MT5_MAGIC=12345

# MACD Multi-TF Configuration
MACD_MULTI_ENABLED=1
MACD_MULTI_UNANIMOUS_REQUIRED=1
MACD_MULTI_CONFIDENCE_THRESHOLD=0.5
MACD_MULTI_BACKFILL_DAYS=365

# Workflow Builder Configuration
WORKFLOW_BUILDER_ENABLED=1
WORKFLOW_AUTO_SAVE=1
WORKFLOW_AUTO_SAVE_INTERVAL=30

# Data Sources Configuration
YFINANCE_ENABLED=1
VNSTOCK_ENABLED=1
VNSTOCK_SOURCES=VCI,TCBS,SSI
DATA_FETCH_TIMEOUT=30
DATA_RETRY_ATTEMPTS=3

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
SCHEDULER_INTERVAL=60
QUEUE_PRIORITY_ENABLED=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5
DEBUG_MODE=0
